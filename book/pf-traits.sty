\newcommand{\traits}[1]{%
  \setlength\intextsep{0pt}%
  \begin{wrapfigure}{l}[2mm]{1.1cm}%
    \centering
    \begin{tcolorbox}[width=1.778cm,
                     colframe=tagborder,
                     colback=tagbg,
                     arc=1mm,
                     box align=center,
                     halign=flush center,
                     left*=0mm,
                     right*=0mm,
                     nobeforeafter,
                    ]%
      \textbf{#1}
    \end{tcolorbox}%
  \end{wrapfigure}%
}
